<h3>Trainer</h3>
<p>Name: <%= @trainer.name if @trainer.name %></p>
<p>Email: <%= @trainer.email if @trainer.email %></p>

<h4>My Pokemon</h4>

<% if @trainer == current_trainer %>
	<%= button_to "Create Pokemon", new_path, :class => "button medium", :method => :get %>
<% end %>

<% @trainer.pokemon.each do |pokemon| %>
	<p> <%= "Name: " + pokemon.name %> </p>
	<p> <%= "Level: "+ pokemon.level.to_s %> </p>
	<p> <%= "Health: " + pokemon.health.to_s %> </p>
	<p> <%= button_to "Damage!", damage_path(id: pokemon.id), :class => "button medium", :method => :patch %> </p>
<% end %>